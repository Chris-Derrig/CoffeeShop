
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registration</h1>
<div class="modal fade" id="PasswordModal" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p>This is a small modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<form asp-controller="Home" asp-action="Welcome">
    <fieldset>
        <div class=" form-group col-sm-4">
            <label>FIRST NAME</label>
            <input class="form-control shadow-sm col-xs-3" type="text" name="First_Name" placeholder="First Name" />
        </div>

        <div class=" form-group col-sm-4">
            <label>LAST NAME</label>
            <input class="form-control shadow-sm col-xs-3" type="text" name="Last_Name" placeholder="Last Name" />
        </div>

        <div class=" form-group col-sm-4">
            <label>EMAIL</label>
            <input class="form-control shadow-sm col-xs-3" type="email" name="email" placeholder="Email" />
        </div>

        <div class=" form-group col-sm-4">
            <label>PASSWORD</label>
            <input class="form-control shadow-sm col-xs-3" type="password" name="password" placeholder="Password" />
        </div>

        <div class=" form-group col-sm-4">
            <label>BIRTHDAY</label>
            <input class="form-control shadow-sm col-xs-3" type="date" name="birthday" />
        </div>

        <div class="form-group col">
            <input class="btn btn-outline-primary small" type="submit" data-dismiss="modal">
        </div>
    </fieldset>
</form>






